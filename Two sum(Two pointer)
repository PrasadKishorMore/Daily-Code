	int arr[] = {2, 7, 11, 15}; int target =9;
		
		
		int left =0;
		int right =arr.length-1;
		
		while(left < right){
		    
		    int sum = arr[left] + arr[right];
		    
		    if(sum == target){
		        
		        	System.out.println("index:"+left +"index:"+ right);
		    }
		    else if(sum < target){
		        left++;
		    }
		    else{
		        right++;
		    }
		    
		}
		
