  // check number is prime
     
     Scanner s = new Scanner(System.in);
     System.out.println("provide number:");
     int num =s.nextInt();
     
      boolean isPrime = true;
      
      if(num <= 1){
          isPrime = false;
      }else{
          
          for(int i=2; i<num; i++){
              
              if(i%2==0){
                  isPrime=false;
                  break;
              }
          }
      }
      
      if(isPrime){
          
          System.out.println("prime number");
      }else{
          
          System.out.println("not prime number");
      }
    
